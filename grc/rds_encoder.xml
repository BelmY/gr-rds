<?xml version="1.0"?>
<block>
	<name>RDS Encoder</name>
	<key>gr_rds_encoder</key>
	<category>RDS</category>
	<import>import rds</import>
	<make>rds.encoder($pty_locale, $ms, $ps, $af1, $af2, $tp)</make>
	<param>
		<name>PTY Locale</name>
		<key>pty_locale</key>
		<value>0</value>
		<type>int</type>
		<option>
			<name>Europe</name>
			<key>0</key>
		</option>
		<option>
			<name>North America</name>
			<key>1</key>
		</option>
	</param>
	<param>
		<name>MS</name>
		<key>ms</key>
		<value>True</value>
		<type>bool</type>
        <option>
            <name>Music</name>
            <key>True</key>
        </option>
        <option>
            <name>Speech</name>
            <key>False</key>
        </option>
	</param>
	<param>
		<name>PS</name>
		<key>ps</key>
		<value>WDR 3</value>
		<type>string</type>
	</param>
    <param>
        <name>AF1</name>
        <key>af1</key>
        <value>89.8e6</value>
        <type>float</type>
    </param>
    <param>
        <name>AF2</name>
        <key>af2</key>
        <value>102.3e6</value>
        <type>float</type>
    </param>
    <param>
        <name>TP</name>
        <key>tp</key>
        <value>True</value>
        <type>bool</type>
        <option>
            <name>True</name>
            <key>True</key>
        </option>
        <option>
            <name>False</name>
            <key>False</key>
        </option>
    </param>
	<sink>
		<name>rds in</name>
		<type>message</type>
		<optional>1</optional>
	</sink>
	<source>
		<name>out</name>
		<type>byte</type>
	</source>
    <doc>
MS: Speech/Music
PS: Program Service Name
AF: Alternate Frequency
TP: Traffic Program
    </doc>
</block>
