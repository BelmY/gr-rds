<?xml version="1.0"?>
<!--
###################################################
##RDS Data Sink
###################################################
 -->
<block>
	<name>RDS Panel</name>
	<key>gr_rds_panel</key>
	<category>[RDS]</category>
	<import>import rds</import>
	<make>#set $win = 'self._%s_win'%$id
rds.rdsPanel($freq)
self._$(id)_win = self.$(id);
$(gui_hint()($win))
</make>
	<callback>set_frequency($freq);</callback>

	<param>
		<name>Frequency</name>
		<key>freq</key>
		<value>0</value>
		<type>real</type>
		<hide>part</hide>
	</param>

	<param>
		<name>GUI Hint</name>
		<key>gui_hint</key>
		<value></value>
		<type>gui_hint</type>
		<hide>part</hide>
	</param>

	<sink>
		<name>in</name>
		<type>message</type>
	</sink>
	<doc>Any change in Frequency parameter will trigger clearing of panel data and set corresponding text on panel.</doc>
</block>
